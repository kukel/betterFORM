<!-- This is a manually maintained association of events with potential target elements. This list is needed
for generating a select1 control for the event during genertion of XForms. -->
<data>
    <target match="model">
        <event name="xforms-model-construct"/>
        <event name="xforms-model-construct-done"/>
        <event name="xforms-model-ready"/>
        <event name="xforms-model-destruct"/>
        <event name="xforms-rebuild"/>
        <event name="xforms-recalculate"/>
        <event name="xforms-revalidate"/>
        <event name="xforms-refresh"/>
        <event name="xforms-link-exception"/>
        <event name="xforms-compute-exception"/>
        <event name="xforms-version-exception"/>
    </target>
    <target match="bind">
        <event name="xforms-binding-exception"/>
    </target>
    <target match="input output range secret select select1 submit textarea trigger upload">
        <event name="xforms-binding-exception"/>
    </target>
    <target match="action insert delete setvalue send dispatch message load rebuild recalculate revalidate refresh setfocus setindex toggle reset">
        <event name="DOMActivate"/>
        <event name="DOMFocusIn"/>
        <event name="DOMFocusOut"/>
        <event name="xforms-value-changed"/>
        <event name="xforms-valid"/>
        <event name="xforms-invalid"/>
        <event name="xforms-in-range"/>
        <event name="xforms-out-of-range"/>
        <event name="xforms-readonly"/>
        <event name="xforms-readwrite"/>
        <event name="xforms-readwrite"/>
        <event name="xforms-required"/>
        <event name="xforms-optional"/>
        <event name="xforms-enabled"/>
        <event name="xforms-disabled"/>
        <event name="xforms-previous"/>
        <event name="xforms-next"/>
        <event name="xforms-focus"/>
        <event name="xforms-help"/>
        <event name="xforms-hint"/>
    </target>
    <target match="output">
        <event name="xforms-output-error"/>
    </target>
    <target match="submission">
        <event name="xforms-submit"/>
        <event name="xforms-submit-error"/>
        <event name="xforms-submit-serialize"/>
        <event name="xforms-submit-done"/>
        <event name="xforms-binding-exception"/>
    </target>
    <target match="item itemset case">
        <event name="xforms-select"/>
        <event name="xforms-deselect"/>
    </target>
    <target match="repeat">
        <event name="xforms-scroll-first"/>
        <event name="xforms-scroll-last"/>
        <event name="xforms-binding-exception"/>
    </target>
    <target match="instance">
        <event name="xforms-insert"/>
        <event name="xforms-delete"/>
    </target>
</data>
